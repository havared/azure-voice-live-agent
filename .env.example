# =============================================================================
# Azure OpenAI Realtime Configuration
# =============================================================================

# Your Azure OpenAI endpoint (WebSocket URL from Azure portal)
AZURE_OPENAI_ENDPOINT=wss://<your-resource-name>.services.ai.azure.com

# API key (Keys & Endpoint section in portal â€” use KEY1 or KEY2)
AZURE_OPENAI_KEY=<your-api-key>

# Deployment name for the realtime model
AZURE_OPENAI_DEPLOYMENT=gpt-realtime

# API version
AZURE_API_VERSION=2025-10-01

# =============================================================================
# Voice Configuration
# =============================================================================

# Voice used for text-to-speech (e.g. alloy, echo, shimmer)
VOICE_NAME=alloy

# =============================================================================
# Voice Activity Detection (VAD) Configuration
# =============================================================================

VAD_THRESHOLD=0.5
VAD_PREFIX_PADDING_MS=300
VAD_SILENCE_DURATION_MS=500

# =============================================================================
# Agent Instructions
# =============================================================================

# Path to the markdown file containing agent system instructions
AGENT_INSTRUCTIONS_FILE=agent_instructions.md

# =============================================================================
# Application Settings
# =============================================================================

APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO

# If true, the agent speaks first with a greeting when session starts
ENABLE_PROACTIVE_GREETING=true
